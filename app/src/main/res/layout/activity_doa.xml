<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoaActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Doa"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="22dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="660dp"
                    android:background="@color/statusbarcolor"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/doa1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Dua When Mounting An Animal Or Any Means Of Transport "
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/doa1.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="بِسْمِ اللهِ، وَالْحَمْدُ لِلَّهِ ﴿سُبْحَانَ الَّذِيْ سَخَّرَ لَنَا هَذَا وَمَا كُنَّا لَهُ مُقْرِنِيْنَ، وَإِنَّا إِلَى رَبِّنَا لَمُنْقَلِبُونَ﴾ الحَمْدُ لِلَّهِ، الحَمْدُ لِلَّهِ، الحَمْدُ لِلَّهِ، اللهُ أكْبَرُ، اللهُ أكْبَرُ، اللهُ أكْبَرُ، سُبْحَانَكَ اللَّهُمَّ إِنِّي ظَلَمْتُ نَفْسِيْ، فَاغْفِرْ لِي، فَإِنَّهُ لَا يَغْفِرُ الذُّنُوبَ إِلَّا أَنْتَ"
                        android:textSize="28dp"
                        android:textColor="@color/black"

                        />



                    <TextView
                        android:id="@+id/doa1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="\n“In the name of Allah and all praise is for Allah. How perfect He is, the One Who has placed this (transport) at our service and we ourselves would not have been capable of that, and to our Lord is our final destiny. All praise is for Allah, All praise is for Allah, All praise is for Allah [3 times], Allah is the greatest, Allah is the greatest, Allah is the greatest [3 times]. How perfect You are, O Allah, verily I have wronged my soul, so forgive me, for surely none can forgive sins except You.”"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:id="@+id/zikir1.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="\nNarrated by Abu Daud: 3/34, At-Tirmidzi: 5/501. See Sahih At-Tirmidzi: 3/156."
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="22dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="580dp"
                    android:background="@color/statusbarcolor"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/doa2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Doa When Waking Up"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>


                    <TextView
                        android:id="@+id/doa2.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="لَا إِلَهَ إِلَّا اللّٰهُ وَحْدَهُ لَا شَرِيْكَ لَهُ، لَهُ الْمُلْكُ وَلَهُ الْحَمْدُ، وَهُوَ عَلَى كُلِّ شَيْءٍ قَدِيْرٌ، سُبْحَانَ اللّٰهِ، وَالْحَمْدُ لِلّٰهِ، وَلَا إِلَهَ إِلَّا اللّٰهُ، وَاللّٰهُ أَكْبَرُ، وَلَا حَوْلَ وَلَا قُوَّةَ إِلَّا بِاللّٰهِ الْعَلِيِّ الْعَظِيْمِ، رَبِّ اغْفِرْ لِيْ"
                        android:textSize="28dp"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:id="@+id/zikir2.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="\n“None has the right to be worshipped except Allah, alone, without any partner, to Him belong sovereignty and praise and He is over all things wholly capable. How perfect Allah is, and all praise is for Allah, and none has the right to be worshipped except Allah, Allah is the greatest and there is no power nor might except with Allah, The Most High, The Supreme, O my Lord forgive me.”"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:id="@+id/zikir2.3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="\nNarrated by Bukhari in Fathul Bari: 3/39, among others. The wording here is from Ibnu Majah, See Sahih Ibnu Majah: 2/335."
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="22dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@color/statusbarcolor"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/doa3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Dua Before Entering The Toilet"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/doa3.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="(بِسْمِ اللّٰهِ) اللّٰهُمَّ إِنِّيْ أَعُوْذُ بِكَ مِنَ الْخُبْثِ وَالْخَبَائِثِ"
                        android:textSize="28dp"
                        android:textColor="@color/black"
                        />



                    <TextView
                        android:id="@+id/doa3.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="\n“In the name of Allah. O Allah, I seek protection in You from the male and female unclean spirits.”"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:id="@+id/doa3.3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefade"
                        android:padding="8dp"
                        android:text="\nNarrated by Bukhari: 1/45 and Muslim: 1/283. The addition of “Bismillah” at its beginning was reported by Said bin Mansur. See Fathul Bari: 1/244."
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
